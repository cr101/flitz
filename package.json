{
  "name": "flitz",
  "version": "1.0.0",
  "scripts": {
    "build": "prisma db push --preview-feature --force && prisma generate && blitz build",
    "build:typedoc": "typedoc",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "start": "rm -rf .blitz && prisma generate && blitz start",
    "studio": "blitz db studio",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@chakra-ui/react": "1.1.6",
    "@emotion/react": "11.1.4",
    "@emotion/styled": "11.0.0",
    "@prisma/client": "2.16.0",
    "blitz": "0.30.0-canary.4",
    "faker": "5.1.0",
    "firebase": "8.2.4",
    "firebase-admin": "9.4.2",
    "formidable": "1.2.2",
    "framer-motion": "3.1.1",
    "i18next": "19.8.4",
    "i18next-browser-languagedetector": "6.0.1",
    "jdenticon": "3.1.0",
    "next-pwa": "5.0.2",
    "prisma": "2.16.0",
    "react": "0.0.0-experimental-a703c3f7e",
    "react-dom": "0.0.0-experimental-a703c3f7e",
    "react-error-boundary": "2.3.2",
    "react-hook-form": "^6.14.0",
    "react-i18next": "11.8.5",
    "react-icons": "4.1.0",
    "react-textarea-autosize": "^8.3.0",
    "secure-password": "4.0.0",
    "sharp": "0.26.3",
    "typescript": "4.1.3",
    "zod": ">=1.0.0"
  },
  "devDependencies": {
    "@types/faker": "5.1.5",
    "@types/formidable": "1.0.32",
    "@types/react": "16.14.2",
    "@types/secure-password": "3.1.0",
    "@types/sharp": "0.27.1",
    "eslint": "7.16.0",
    "eslint-config-blitz": "0.29.2",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "typedoc": "0.20.16"
  },
  "private": true,
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "tsc && npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
